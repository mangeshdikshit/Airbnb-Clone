<% layout('/layouts/boilerplate') -%>

<body>
    <h2>Edit</h2>


  <div class="row">
    <div class="col-8 offset-2">
      <form action="/listings/<%= _id %>/edit?__method=PATCH" method="post" class="needs-validation" novalidate>
        <div class="mb-3">
          <label for="title" class="form-lable">Title</label>
          <input type="text" name="title" id="title" class="form-control" value="<%= title %>" required/>
          <div class="invalid-feedback">
            Please Enter this feild!
          </div>
        </div>

        <div class="mb-3">
          <label for="description" class="form-lable">Description</label>
          <textarea
            name="description"
            id="description"
            class="form-control" required
          ><%= description %></textarea>
          <div class="invalid-feedback">
            Please Enter this feild!
          </div>
        </div>

        <div class="mb-3">
          <label for="image" class="form-lable">Image</label>
          <textarea name="image" id="image" class="form-control" required><%= image %></textarea>
          <div class="invalid-feedback">
            Please Enter this feild!
          </div>
        </div>

        <div class="row">
            <div class="mb-3 col-md-4">
                <label for="price" class="form-lable">Price</label>
                <input type="number" name="price" id="price" class="form-control" value="<%= price %>" required/>
                <div class="invalid-feedback">
                  Please Enter this feild!
                </div>
              </div>
      
              <div class="mb-3 col-md-8">
                  <label for="country" class="form-lable">Country</label>
                  <input type="text" name="country" id="country" class="form-control" value="<%= country %>" required/>
                  <div class="invalid-feedback">
                    Please Enter this feild!
                  </div>
                </div>
        </div>

        <div class="mb-3">
          <label for="location" class="form-lable">Location</label>
          <input
            type="text"
            name="location"
            id="location"
            class="form-control"
            value="<%= location %>" required
          />
          <div class="invalid-feedback">
            Please Enter this feild!
          </div>
        </div>

        

        <button class="btn btn-dark mb-3">Edit</button>
      </form>
    </div>
  </div>

